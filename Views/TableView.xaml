<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:FoodLog.ViewModels"
             xmlns:resource="FoodLog.Resources"
             x:Class="FoodLog.Views.TableView">

    <StackLayout>
        <Label Text="{Binding testString}"
                FontSize="20"
                HorizontalOptions="Center"/>

        <!-- Bind the ListView's ItemsSource to the FoodItems collection -->
        <ListView ItemsSource="{Binding FoodItems}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <!-- Display each food item as a simple text label -->
                    <TextCell Text="{Binding .}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    <Button Text="command button" 
        Command="{Binding LoadDataCommand}"
        HeightRequest="50" BackgroundColor="LightBlue"/>

        
    </StackLayout>

</ContentView>
