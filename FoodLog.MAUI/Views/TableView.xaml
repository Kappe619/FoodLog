<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   xmlns:local="clr-namespace:FoodLog.MAUI.Views"
             x:Class="FoodLog.MAUI.Views.TableView">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


        <Button Text="Add Item" Command="{Binding AddItemCommand}" />
        <Button Text="Remove Item" Command="{Binding RemoveItemCommand}" />

        <Label Text="this is the table view"/>
    </VerticalStackLayout>
</ContentView>
