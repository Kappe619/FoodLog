<UserControl x:Class="FoodLog.WPF.Views.TableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoodLog.WPF.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel>


        <Label 
            Content="Welcome to .NET MAUI!"
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" />


        <Button Content="Add Item" Command="{Binding AddItemCommand}" />
        <Button Content="Remove Item" Command="{Binding RemoveItemCommand}" />

        <Label Content="this is the wpf table view"/>

    </StackPanel>

</UserControl>
